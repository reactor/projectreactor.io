<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="reactor" level="info"/>
    <!--<logger name="reactor.ipc.netty" level="debug"/>-->
    <!--<logger name="reactor.ipc.netty.channel.ChannelOperations" level="trace"/>-->
    <!--<logger name="reactor.ipc.netty.http.client.HttpClient" level="off"/>-->
    <!--<logger name="reactor.ipc.netty.http.server.HttpServer" level="off"/>-->
    <logger name="proxy" level="info"/>

    <root level="info">
        <appender-ref ref="stdout"/>
    </root>

</configuration>